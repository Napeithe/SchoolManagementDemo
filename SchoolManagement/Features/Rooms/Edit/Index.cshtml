@using SchoolManagement.Features.Shared
@model SchoolManagement.Features.Rooms.Edit.Command

@(await Html.PartialAsync("_title", new TitleViewModel("Edytuj pokój", Url.Action("Index"), Model.Id)))

<div class="row">
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"> Szczegóły pokoju</h6>
            </div>
            <div class="card-body">
                <form asp-action="EditRoom">
                    @Html.HiddenFor(x => x.Id)
                    <div class="form-group">
                        <label asp-for="Name">Nazwa pokoju</label>
                        <input asp-for="Name" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Color">Wybierz kolor</label>
                        <div id="roomColor" class="input-group">
                            <input type="text" class="form-control" asp-for="Color" />
                            <span class="input-group-append">
                                <span class="input-group-text colorpicker-input-addon"><i></i></span>
                            </span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Edytuj pokój</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        app.room.add.init();
        
        let opt = {
            backUrl: "@Url.Action("Index")",
            removeUrl: "@Url.Action("Remove")",
            title:"Usuwanie pokoju",
            content:"Czy na pewno chcesz usunąć pokój z systemu?"
        }
        app.removeDialog.init(opt);
    </script>
}
