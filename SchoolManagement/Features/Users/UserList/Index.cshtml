@using SchoolManagement.Features.Shared
@model SchoolManagement.Features.Users.UserList.UsersListVierModel

@(await Html.PartialAsync("_title", new TitleViewModel("Użytkownicy systemu")))

<div class="mt-3 mb-3">
    <div>
        <a role="button" class="btn btn-primary" asp-controller="Users" asp-action="Add">Dodaj użytkownika</a>
    </div>
</div>

<div id="userList"></div>

<div class="mt-3 mb-3">
    <div>
        <a role="button" class="btn btn-primary" asp-controller="Users" asp-action="Add">Dodaj użytkownika</a>
    </div>
</div>



@section Scripts{
    <script>
        var dataSet = @Html.Raw(Json.Serialize(Model.UserDtoList));

        var options = {
            editUserUrl: '@Url.Action("Edit", "Users")',
            dataSet: dataSet
        };
        app.userList.init(options);
    </script>
}

