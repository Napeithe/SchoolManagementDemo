@model Model.Dto.LoginViewModel
@{
    Layout = "_LayoutNotLogged";
}

<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row" >
                    <div class="col-lg-6 d-lg-block bg-login-image ">
                        <div class="d-flex justify-content-center align-items-center h-100">
                            <img src="~/img/rds_assets_logo_full.svg" class="w-100" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        @if (!string.IsNullOrEmpty(Model.Error))
                        {
                            <div class="card mb-4 mt-2 mr-2 bg-gradient-danger text-white border-left-danger">
                                <div class="card-body">
                                    @Model.Error
                                </div>
                            </div>
                        }
                        <div class="pt-1 pl-5 pr-5 pb-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Witaj ponownie!</h1>
                            </div>
                            <form class="user" asp-controller="Account" asp-action="Login" id="loginForm">
                                <div class="form-group">
                                    <input type="email" asp-for="Email" class="form-control form-control-user" aria-describedby="emailHelp" placeholder="Wprowadź adres email...">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" class="form-control form-control-user" placeholder="Hasło">
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" class="custom-control-input" asp-for="RememberMe" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">Zapamiętaj mnie</label>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Zaloguj się
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        app.login.init();
    </script>
}
